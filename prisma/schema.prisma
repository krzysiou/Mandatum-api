generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid())
  username    String      @unique
  email       String
  password    String
  friendships Friendship[] @relation("Owners")
  memberships  Friendship[] @relation("Members")
}

model Friendship {
  id       Int      @id @default(autoincrement())
  ownerId  String
  owner    User     @relation("Owners", fields: [ownerId], references: [id])
  memberId String
  member   User     @relation("Members", fields: [memberId], references: [id])
}
